<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="tr.com.huseyinaydin.map.OgrenciBilgisi" table="ogrencibilgisi">

		<id name="ogrenciId" type="java.lang.Integer">
			<column name="OGRENCI_ID" />
			<generator class="foreign">
				<param name="property">ogrenci</param>
			</generator>
		</id>

		<property name="adres">
			<column name="ADRES" length="60" />
		</property>

		<property name="email">
			<column name="EMAIL" length="60" />
		</property>

		<one-to-one name="ogrenci" class="tr.com.huseyinaydin.map.Ogrenci" constrained="true" />
	</class>
</hibernate-mapping>