<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="tr.com.huseyinaydin.map.Departman" table="departman">

		<id name="departmanId">
			<column name="DEPARTMAN_ID" />
			<generator class="native" />
		</id>

		<property name="departmanAdi">
			<column name="BOLUMADI" length="60" />
		</property>

		<set name="calisanlar" table="calisan" inverse="true" lazy="true" fetch="select">
			<key>
				<column name="departman_id" not-null="true" />
			</key>
			<one-to-many class="tr.com.huseyinaydin.map.Calisan" />
		</set>

	</class>
</hibernate-mapping>