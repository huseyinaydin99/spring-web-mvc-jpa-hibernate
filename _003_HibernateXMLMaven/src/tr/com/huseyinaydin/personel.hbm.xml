<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="tr.com.huseyinaydin.Personel" table="PERSONEL2">
		<id name="personelId" type="int">
			<column name="ID" />
			<generator class="identity" />
		</id>

		<property name="personelAdi">
			<column name="ADI" />
		</property>

		<property name="personelSoyadi">
			<column name="SOYADI" length="60" />
		</property>

		<property name="personelEmail">
			<column name="EPOSTA" length="100" />
		</property>
	</class>
</hibernate-mapping>